    "version": "0.2.0",
    "configurations": [
        {
            "name": "app",
            "cwd": "./",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define-from-file=.env.json",
                "--web-browser-flag=--disable-web-security"
            ]
        },
        {
            "name": "app (profile mode)",
            "cwd": "./",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--dart-define-from-file=.env.json",
                "--web-browser-flag=--disable-web-security"
            ]
        },
        {
            "name": "app (release mode)",
            "cwd": "./",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--dart-define-from-file=.env.json",
                "--web-browser-flag=--disable-web-security"
            ]
        }
    ]
}